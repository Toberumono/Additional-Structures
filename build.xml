<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for my CustomStructures project">
	<!--this file was created by Eclipse Runnable JAR Export Wizard-->
	<!--ANT 1.7 is required                                        -->

	<target name="javadoc">
		<javadoc access="protected" author="true" classpath="" destdir="doc" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" packagenames="lipstone.*" source="1.7" sourcepath="src" splitindex="true" use="true" version="true" />
	</target>

	<target name="create_run_jar" depends="javadoc">
		<jar destfile="../CustomStructures.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="" />
			</manifest>
			<fileset dir="./bin/" />
			<fileset dir="." includes="doc/**" />
			<fileset dir="./src/" />
		</jar>
	</target>
</project>
